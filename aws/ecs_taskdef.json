{
  "family": "sepsis2019-api",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "<REEMPLAZA: arn:aws:iam::<account>:role/ecsTaskExecutionRole>",
  "taskRoleArn": "<REEMPLAZA: arn:aws:iam::<account>:role/ecsTaskRole>",
  "containerDefinitions": [
    {
      "name": "sepsis2019-api",
      "image": "<REEMPLAZA: <account>.dkr.ecr.<region>.amazonaws.com/sepsis2019-api:latest>",
      "portMappings": [{ "containerPort": 8080, "protocol": "tcp" }],
      "essential": true,
      "environment": [
        { "name": "MODELS_DIR", "value": "/app/models" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sepsis2019-api",
          "awslogs-region": "<region>",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
